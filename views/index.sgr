extends(src='layout.sgr')
  block(name='content')
    section
      #hero(style=bg)
        a(href='#' )
          h1  {{wordpress.review[0].title}}
          .hero-overlay

      .recent-stories
        each(loop="post, i in wordpress.review")
          if(condition="i > 0")
            .story
              a(href='#')
                h2 {{post.title}}

    aside.sidebar
      h1 reviews
